*
  margin 0
  padding 0

html,body
  font-size 20px
  width 100%
  height 100%

@media screen and(min-width 414px){
    html
        font-size 25px

}

.music
  width 100%
  height 100%
  position relative
  overflow hidden
  &::after
    content ''
    background url('https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=2895145369,1007318457&fm=224&gp=0.jpg')
    background-size cover
    display block
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    filter blur(15px)
    z-index 2
  &-container
    height 100%
    position relative
    z-index 3
    .music-header
      padding 0 3rem 
      text-align center
      height 3rem
      line-height 3rem
      .iconfont
        float left
        font-size 20px
        color #fff
      .status
        font-size 16px
        font-family SourceHanSansCN
        font-weight 400
        color #FFFFFF
    .music-content
        background #fff
        width 100%
        height 100%
        // height calc(100% - 7.5rem)
        margin-top 4.5rem
    .music-pic
        width 13rem
        height 14rem
        overflow hidden
        margin 0 auto
        border-radius 2rem
        position relative
        top -2.2rem
        box-shadow 0 30px 50px #f1f1f1 

