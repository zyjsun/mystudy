*
  margin 0
  padding 0
#toast
    display none
.movie
  width 100%
  &-head
    width 100%
    height 40px
    line-height 40px
    background-color #1e2025
    color #fff
    padding 0 10px
    box-sizing border-box
    display flex
    .iconfont
      width 16px
    .title
      flex 1
      text-align center
  &-info
    width 100%
    background-color #1e2025
    padding 15px
    box-sizing border-box
    &_desc //继承
      width 100%
      display flex
      .info-pic
        width 122px
        height 165px
        overflow hidden
        img
          width 100%
      .info-container
        flex 1
        color #fff
        font-size 12px
        margin-left 10px
        .name  
            font-size 24px
            font-family Arial,sans-serif
            font-weight normal
        .en-name
            color #9b9da2
            font-style 14px
        .like
            padding 5px 10px
            background linear-gradient(to right, #9b9da2, transparent)
            border-radius 10px
            margin 10px 0
            .iconfont
                display  inline-block
                transform rotateZ(-20deg)
                color #fcf7bb
                margin-right 5px
       .type,play-time
            color #9b9da2
       .btn-wrap
            display  flex
            margin-top 10px
            .flex
                flex 1
                text-align center
                height 32px
                line-height 32px
                background-color #58585b
                border-radius 4px
                &:first-child //第一个flex
                    margin-right 10px
                .iconfont
                    font-size 14px
    &__rate
      background-color #000
      padding 10px
      border-radius 4px
      margin-top 15px
      .rate-title
        display flex
        font-size 12px
        justify-content space-between
        &__left
            color #fff
            .iconfont
                color red
        &__right
            color #886a5b
      .rate-detail
        display flex
        &__left
            flex 454
            display flex
            .grade
                text-align 
                h2
                    color #f7af00
                p
                    color #77594a
            .star
                float left 
                margin-left 8px
                .list
                  line-height 16px
                  list-style none
                  star-num1
                    display inline-block
                    color orange
                    font-size 0
                    .iconfont
                      font-size 15px 
                  .present
                    margin-left 10px
                    border-radius 3px
                    height 7px
                    width 120px
                    background-color #5d3d3c
                    overflow hidden
                    position relative



