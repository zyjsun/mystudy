*
  margin 0
  padding 0

a
  text-decoration none

ul,li
  list-style none
  text-align center
  margin 0 25px 10px 0

.list li
  display inline-block
  text-align center
  .pic
    height 145px
    overflow hidden
    margin-bottom 10px
    img
      width 100px

  .title
    line-height 1.45
    font-size 13px
    margin-bottom 4px
    a
      color #cccccc

  .btn-link
    display inline-block
    vertical-align middle
    padding 2px 10px
    border-radius 2px
    background #1c8bd0
    color #ffffff
    font-size 12px