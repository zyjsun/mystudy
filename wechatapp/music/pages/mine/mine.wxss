wrapper {
  width: 100%;
  height: 100%;
}

.maintop {
  width: 100%;
  height: 60rpx;
  background-color: #16151b;
}

.main {
  width: 100%;
  height: 390rpx;
  background-color: #16151b;
}

.mine {
  width: 750rpx;
  height: 200rpx;
  background-color: #16151b;
}

.mine-pic {
  border-radius: 50%;
  width: 108rpx;
  height: 108rpx;
  margin-top: 46rpx;
  margin-left: 35rpx;
}

.mine-name {
  float: right 10rpx;
  position: absolute;
  margin-left: 22rpx;
  margin-top: 60rpx;
  color: white;
  font-size: 30rpx;
}

.mine-grade {
  position: absolute;
  margin-left: 40rpx;
  margin-top: 110rpx;
  color: white;
  font-size: 20rpx;
}

.mine-vip {
  float: right;
  color: #515154;
  font-size: 22rpx;
  line-height: 200rpx;
  position: absolute;
  margin-left: 420rpx;
}

.des {
  background-color: #fff;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  top: -20px;
}

.my {
  width: 100%;
  height: 80rpx;
}

.my-name {
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}

.scroll {
  height: 320rpx;
  white-space: nowrap;
}

.scroll-box {
  display: inline-block;
  height: 280rpx;
  width: 218rpx;
  margin: 0 0 0 20rpx;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
  color: #000;
  position: relative;
}

.scroll-box-img {
  position: absolute;
  height: 280rpx;
  width: 218rpx;
}

.scroll-box-img image {
  width: 100%;
  height: 100%;
}

.scroll-box-pic {
  /* width: 48rpx;
  height: 48rpx;
  margin-top: 60rpx; */
}

.scroll-box-mid {
  background-color: rgba(65, 65, 65,.2);
  padding: 10rpx;
  z-index:  100;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #fff;
}

.scroll-box-down {
  font-size: 24rpx;
  color: #515154;
  position: absolute;
  margin-left: -60rpx;
  margin-top: 25rpx;
}

.recommed {
  width: 100%;
  height: 80rpx;
}

.recommed-name {
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 550;
  color: #000000;
}

.recommen-delete {
  line-height: 80rpx;
  color: #515154;
  margin-left: 580rpx;
}

.musicsheet {
  width: 100%;
  height: 100%;
}

.musicsheet-box {
  width: 46%;
  height: 200rpx;
  display: flex;
  float: left;
  align-items: center;
  margin-right: 20rpx;
}

.musicsheet-pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}

.musicsheet-list {
  font-size: 25rpx;
  max-width: 180rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: -20rpx;
}

.musicsheet-des {
  font-size: 20rpx;
  color: #515154;
  margin-left: -20rpx;
}