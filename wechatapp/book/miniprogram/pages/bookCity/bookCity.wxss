.header{
  display: flex;
  margin-top: 40rpx;
}
.hot{
  font-size: 40rpx;
  font-weight: bold;
  color: #68aac2;
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 12rpx;
}
.more{
  flex: 1;
  text-align: center;
  padding: 12rpx;
  color: #be3948;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.hot-list{
  display: flex;
  margin: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #fef9ef;
  border-radius: 4px;
  border: 1px solid #d7d7d7;
}
.item-left, .item-left image{
  width: 200rpx;
  height: 260rpx;
}
.item-right{
  flex: 1;
  margin-left: 10rpx;
  color: #aaa;
}
.authtop{
  display: flex;
  justify-content: space-between;
  padding-bottom: 14rpx;
  border-bottom: 1px dotted #A6D3E8;
}
.book-name{
  color: #222;
  font-weight: 700;
}
.item-right .detail{
  height: 120rpx;
  line-height: 40rpx;
  padding: 14px 0;
}

.classify{
  padding: 12rpx;
  font-size: 32rpx;
  color: #888;
}
.classify-name{
  font-weight: 500;
  line-height: 80rpx;
  background: #f6f6f6;
  border-top: 1px solid #d7d7d7;
  border-bottom: 1px solid #d7d7d7;
  padding-left: 20rpx;
  color: #222;
}
.classify-item{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  background: #fff;
}