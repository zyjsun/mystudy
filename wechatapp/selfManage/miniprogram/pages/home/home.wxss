.user-info-container{
  display: flex;
  margin: 0 40px;
  margin-top: 32rpx;
}
.user-info-container .avatar{
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25,118,210, 0.1);
}
.user-info-container .info{
  margin-left: 24rpx;
  color: #000;
  font-weight: bold;
  font-size: 36rpx;
}
.info .name{
  color: #1976d2;
  font-weight: bold;
  font-size: inherit;
}

.info .statistics{
  font-size: 32rpx;
}

.authorize{
  display: inline-block;
  box-sizing: border-box;
  padding: 12rpx 48rpx;
  border-radius: 36rpx;
  background-color: #ffee58;
  text-align: center;
  font-weight: bold;
  font-size: 26rpx;
  line-height: 28rpx;

}

.pie-container{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.pie-container,
.pie{
  width: 100%;
  height: 500rpx;
}

.empty-img{
  position: absolute;
  width: 50%;
}

.time-tips{
  margin: 0 40px;
  background-color: #fdd835;
  font-size: 28rpx;
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  color: #555;
  box-shadow: 0 6rpx 24rpx rgba(25,118,210, 0.88);
}
.timer-detail{
  display: flex;
  align-items: center;
}

.timer{
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
  margin-top: 6rpx;
  letter-spacing: 2rpx;
}

.time-goal-title{
  font-weight: bold;
  color: #000;
  margin: 0 8rpx;
}

.check-timer{
  margin-left: auto;
  background-color: #fff;
  color: #1976d2;
  padding: 5rpx 16rpx;
  font-weight: bold;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.create{
  display: block;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #1976d2;
  position: fixed;
  bottom: 0;
  right:0;
  margin: 32rpx;
  padding: 24rpx;
  box-sizing: border-box;
}